# Microsoft Graph Configuration
# Choose authentication mode: "ClientSecret" or "UserPassword"
GRAPH_AUTH_MODE=ClientSecret
# Account type: "business" or "personal"
GRAPH_ACCOUNT_TYPE=business

# === Option 1: Client Secret Auth (Business OneDrive - app-only) ===
GRAPH_TENANT_ID=your-tenant-id-here
GRAPH_CLIENT_ID=your-client-id-here
GRAPH_CLIENT_SECRET=your-client-secret-here

# === Option 2: Username/Password Auth (Personal OneDrive or delegated) ===
# GRAPH_USERNAME=your-email@outlook.com
# GRAPH_PASSWORD=your-password

# OneDrive Location
GRAPH_DRIVE_ID=your-drive-id-here
# GRAPH_SITE_ID=your-site-id-here  # Alternative to DRIVE_ID for business
GRAPH_FOLDER_PATH=/Shared Documents/Docs

# OpenAI Configuration
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_EMBED_MODEL=text-embedding-3-small

# Database Configuration
DB_CONNECTION_STRING=Host=localhost;Port=5432;Database=vectors;Username=postgres;Password=password;MinPoolSize=1;MaxPoolSize=3

# Chunking Configuration (Optional)
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_FILES=3
BATCH_SIZE=16
